{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "enabledManagers": [
    "pep621",
    "pre-commit",
    "github-actions"
  ],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit dependencies",
      "groupSlug": "pre-commit-deps"
    },
    {
      "matchManagers": ["pep621"],
      "matchDepTypes": ["dev-dependencies", "dev", "test", "lint"],
      "groupName": "backend dev dependencies",
      "groupSlug": "backend-dev-deps"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions dependencies",
      "groupSlug": "gha-deps"
    }
  ],
  "schedule": ["* * * 12 *"]
}
